/* pages/bloc/index.wxss */
page{
  padding-bottom: 100rpx;
}
swiper{
  height: 350rpx;
}
.swiper_img {
  width: 100%;
  height: 100%;
  position: relative;
}

.banner {
  padding: 32rpx;
  text-align: center;
}

.banner image {
  width: 686rpx;
  height: 289rpx;
  border-radius: 16rpx;
}
.swiper_search{
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.5);
}
.swiper_search image{
  width: 60%;
  height: 60%;
}

.scroll-header {
  display: flex;
  white-space: nowrap;
}

.scroll-header .scroll-view-item {
  height: 160rpx;
  width: 140rpx;
  display: inline-block;
  background: #ffffff;
  border-radius: 5rpx;
  margin-right: 20rpx;
}
.scroll-header .scroll-view-item:first-child{
  margin-left: 32rpx;
}
.scroll-header .scroll-view-item:last-child{
  margin-right: 32rpx;
}
.scroll-header .option_btn{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.option_btn image{
  display: block;
  height: 45rpx;
  margin-bottom: 26rpx;
}
.option_btn text{
  font-size: 24rpx;
  color: #454343;
  line-height: 33rpx;
}

