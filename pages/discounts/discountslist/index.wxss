/* pages/discounts/discountslist/index */
/* 边距 */
.m_b_24{
  margin-bottom: 24rpx;
}
.m_t_40{
  margin-top: 40rpx;
}
.m_t_20{
  margin-top: 20rpx;
}

/* 文字对齐方式 */
.t_center{
  text-align: center;
}
.t_l{
  text-align: left;
}
/* tab切换 */
.tabChange{
  position: relative;
  display: flex;
  justify-content: space-around;
  color: #6B6B6B;
  height: 42rpx;
  margin: 23rpx 0 47rpx;
}
.tabChange .active{
  color: #C39664;
}
.tabChange .bottomBorder{
  position: absolute;
  bottom: -22rpx;
  width: 30rpx;
  height: 4rpx;
  background: #C39664;
  transition: all .3s;
}
.tabChange .bottomBorder.right{
  left: 546rpx;
}
.tabChange .bottomBorder.left{
  left: 174rpx;
}
.discountslist{
  padding: 0 32rpx;
}
.main{
  position: relative;
}
.invalid{
  position: absolute;
  bottom: -20rpx;
  right: 0;
  width: 100rpx;
  height: 100rpx;
}
.discountslist .item {
  display: flex;
  justify-content: space-between;
  height: 196rpx;
  color: #fff;
  /* background: #FFBF2A; */
  padding: 0 32rpx;
  border-radius: 6rpx;
  margin-bottom: 32rpx;
}
.discountslist .item.isUse{
  opacity:0.48;
}
.discountslist .item .monenyInfo{
  position: relative;
  width: 139rpx;
}
.discountslist .item .btn{
  width: 139rpx;
  height: 47rpx;
  line-height: 47rpx;
  color: #F7B419;
  background: #fff;
  border-radius: 30rpx;
  margin-top: 21rpx;
}
.discountslist .item .imgbg{
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}
/* 模态框 */
.f_1{
  flex: 1;
}
.cu-dialog{
  width: 560rpx;
  background: #fff;
}
.title{
  position:relative;
  top: 30rpx;
  color: #222;
}
.num{
  color: #CC9C67;
  margin: 20rpx 0 50rpx;

}
.ruls{
  line-height: 50rpx;
  padding: 0 50rpx 50rpx;
}
.ruls_text{
  color: #6b6b6b;
}