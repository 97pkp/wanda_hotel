/* pages/hotel/index.wxss */
page{
  padding-bottom: 110rpx;
}
.clear_float:after{
  content: '';
  height: 0;
  line-height: 0;
  display: block;
  visibility: hidden;
  clear: both;
}
swiper{
  height: 350rpx;
}
.swiper_img {
  width: 100%;
  height: 100%;
  position: relative;
}


.option-header {
  display: flex;
  white-space: nowrap;
  margin: 32rpx 0;
}

.option-header .scroll-view-item {
  height: 160rpx;
  width: 140rpx;
  display: inline-block;
  background: #ffffff;
  border-radius: 5rpx;
  margin-right: 20rpx;
}
.option-header .scroll-view-item:first-child{
  margin-left: 32rpx;
}
.option-header .scroll-view-item:last-child{
  margin-right: 32rpx;
}
.option-header .option_btn{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.option-header .option_btn image{
  display: block;
  height: 45rpx;
  margin-bottom: 26rpx;
}
.option-header .option_btn text{
  font-size: 24rpx;
  color: #454343;
  line-height: 33rpx;
}

.coupon-header {
  display: flex;
  white-space: nowrap;
  /* margin: 32rpx 0; */
  margin-bottom: 32rpx;
}

.coupon-header .scroll-view-item {
  height: 196rpx;
  width: 306rpx;
  display: inline-block;
  /* background: #ffffff; */
  /* border-radius: 5rpx; */
  margin-right: 20rpx;
}
.coupon-header .scroll-view-item:first-child{
  margin-left: 32rpx;
}
.coupon-header .scroll-view-item:last-child{
  margin-right: 32rpx;
}
.coupon-header .option_btn{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.coupon-header .option_btn image{
  display: block;
  height: 45rpx;
  margin-bottom: 26rpx;
}
.coupon-header .option_btn text{
  font-size: 24rpx;
  color: #454343;
  line-height: 33rpx;
}
.coupon_info{
  width: 243rpx;
  height: 100%;
}
.coupon-header .coupon_btn{
  width: 61rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.coupon-header .coupon_btn text{
  font-size: 24rpx;
  line-height: 33rpx;
  color: #ffffff;
}

.coupon_info{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  color: #ffffff;
  box-sizing: border-box;
  padding: 15rpx 11rpx 12rpx;
}
.coupon_info .price{
  font-size: 24rpx;
}
.coupon_info .price text{
  font-size: 50rpx;
  color: #ffffff;
  line-height: 70rpx;
}
.coupon_info .price_tip{
  font-size: 20rpx;
  line-height: 28rpx;
  margin-bottom: 23rpx;
}

.coupon_info .coupon_type{
  font-size: 18rpx;
  line-height: 25rpx;
}
.coupon_info .coupon_date{
  font-size: 18rpx;
  line-height: 25rpx;
}
.coupon_info .other{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}

.list_warp{
  padding: 32rpx;
  background: #ffffff;
}

.list_warp .option_btn{
  width: 333rpx;
  float: left;
  margin-bottom: 20rpx;
}
.list_warp .option_btn:nth-of-type(2n+1){
  margin-left: 20rpx;
}
.list_warp .img_warp{
  width: 100%;
  height: 240rpx;
  position: relative;
}
.list_warp .img_warp .show_img{
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 16rpx 16rpx 0 0;
}
.list_warp .img_warp .type_img{
  position: absolute;
  top: 15rpx;
  left: -10rpx;
  width: 91rpx;
  height: 47rpx;
}
.list_warp .info_warp{
  width: 100%;
  /* height: 240rpx; */
  border-radius: 0 0 16rpx 16rpx;
  overflow: hidden;
  border: solid #cccccc;
  border-width: 0 1rpx 1rpx 1rpx;
  box-sizing: border-box;
  padding: 17rpx;
}

.list_warp .item_name{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 24rpx;
}
.list_warp .synopsis{
  color: #888888;
  font-size: 20rpx;
  line-height: 28rpx;
}
.list_warp .hotel_name{
  font-size: 17rpx;
  color: #888888;
  line-height: 24rpx;
}
.list_warp .price{
  margin-top: 26rpx;
}
.list_warp .new_price{
  display: inline-block;
  color: #977958;
  font-size: 36rpx;
  line-height: 41rpx;
}
.list_warp .old_price{
  display: inline-block;
  color: #A8A8A8;
  text-decoration:line-through;
  margin-left: 10rpx;
}
.list_warp .small_txt{
  font-size: 20rpx;
}
.list_warp_header{
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 35rpx;
  padding: 6rpx 0;
}
.list_warp_header image{
  height: 100%;
}
.list_warp_header text{
  font-size: 24rpx;
  line-height: 33rpx;
  color: #191919;
}