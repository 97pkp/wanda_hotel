/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
  position: relative;
}

.aaa::after{
  content: '」';
  font-size: 10px;
  position: absolute;
  top: 0;
}
.aaa::before{
  content: '「';
  font-size: 10px;
  position: absolute;
  bottom: 0;
}
