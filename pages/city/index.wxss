/* pages/city/index.wxss */

.search_model{
  width: 100vw;
  height: 100vh;
  background: #F0F0F0;
  padding-bottom: 110rpx;
}
.search_box{
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #ffffff;
  width: 100%;
  z-index: 50;
  /* box-shadow: 0px 10rpx 20rpx -10rpx rgba(0, 0, 0, 0.3); */
}
.search_warp_model{
  width: 600rpx;
}
.search_warp input{
  font-size: 28rpx;
  padding: 0 20rpx 0 10rpx;
  width: 100%;
}

.search_box .search_btn{
  margin-right: 20rpx;
  font-size: 28rpx;
}


.late_search{
  padding: 0 30rpx;
}
.late_search_title{
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  color: #999999;
  padding: 38rpx 0 20rpx;
  box-sizing: content-box;
}
.late_search .list>.tag{
  width: 208rpx;
  height: 80rpx;
  background: #ffffff;
  padding: 10rpx;
  box-sizing: border-box;
  font-size: 22rpx;
  color: #322E2A;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  float: left;
  text-align: center;
}
.late_search .list>view:nth-of-type(3n){
  margin-right: 0;
}
.no_data{
  font-size: 22rpx;
  color: #322E2A;
}

.search_warp{
  height: 60rpx;
  background: #F4F5F5;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin: 10rpx 30rpx;
  border-radius: 30rpx;
  box-sizing: border-box;
}
.search_warp image{
  width: 28rpx;
  height: 28rpx;
  margin: 0 12rpx 0 30rpx;
}
.search_warp text{
  color: #C3C3C3;
  font-size: 28rpx;
}
.search_content{
  margin-top: 80rpx;
  height: calc(100vh - 110rpx);
  overflow-y: auto;
}

/* 索引列表 */
.indexes {
  position: relative;
}

.indexBar {
  position: fixed;
  right: 0px;
  top: 50%;
  transform: translateY(-50%);
  padding: 20rpx 12rpx 20rpx 60rpx;
  display: flex;
  align-items: center;
}

.indexBar .indexBar-box {
  width: 40rpx;
  height: auto;
  /* background: #fff; */
  display: flex;
  flex-direction: column;
  /* box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1); */
  border-radius: 10rpx;
}

.indexBar-item {
  flex: 1;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  color: #977958;
  line-height: 28rpx;
}

movable-view.indexBar-item {
  width: 40rpx;
  height: 40rpx;
  z-index: 9;
  position: relative;
}

movable-view.indexBar-item::before {
  content: "";
  display: block;
  position: absolute;
  left: 0;
  top: 10rpx;
  height: 20rpx;
  width: 4rpx;
  background-color: #f37b1d;
}

.indexToast {
  position: fixed;
  top: 0;
  right: 80rpx;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  margin: auto;
  color: #fff;
  line-height: 100rpx;
  text-align: center;
  font-size: 48rpx;
}
