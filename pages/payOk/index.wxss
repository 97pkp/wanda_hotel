/* pages/payOk/index.wxss */
.clear_float:after{
  content: '';
  height: 0;
  line-height: 0;
  display: block;
  visibility: hidden;
  clear: both;
}

.ok_warp{
  width: 100%;
  height: 653rpx;
  background: #ffffff;
  margin-bottom: 30rpx;
  padding: 0 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}
.ok_warp image{
  width: 162rpx;
  height: 162rpx;
  margin-bottom: 33rpx;
  margin-top: 74rpx;
}
.pay_status{
  font-size: 36rpx;
  line-height: 50rpx;
  color: #454343;
  margin-bottom: 15rpx;
}
.pay_num{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #959494;
  margin-bottom: 33rpx;
}
.pay_btn{
  width: 100%;
  height: 90rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  line-height: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.back_btn{
  background: #19AC1A;
  color: #ffffff;
  margin-bottom: 30rpx;
}
.look_order{
  background: #F8F8F8;
  color: #454343;
  border: 1rpx solid #CCCCCC;
}

.list_warp{
  padding: 32rpx;
  background: #ffffff;
}

.list_warp .option_btn{
  width: 333rpx;
  float: left;
  margin-bottom: 20rpx;
}
.list_warp .option_btn:nth-of-type(2n+1){
  margin-left: 20rpx;
}
.list_warp .img_warp{
  width: 100%;
  height: 240rpx;
  position: relative;
}
.list_warp .img_warp .show_img{
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 16rpx 16rpx 0 0;
}
.list_warp .img_warp .type_img{
  position: absolute;
  top: 15rpx;
  left: -10rpx;
  width: 91rpx;
  height: 47rpx;
}
.list_warp .info_warp{
  width: 100%;
  /* height: 240rpx; */
  border-radius: 0 0 16rpx 16rpx;
  overflow: hidden;
  border: solid #cccccc;
  border-width: 0 1rpx 1rpx 1rpx;
  box-sizing: border-box;
  padding: 17rpx;
}

.list_warp .item_name{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 24rpx;
}
.list_warp .synopsis{
  color: #888888;
  font-size: 20rpx;
  line-height: 28rpx;
}
.list_warp .hotel_name{
  font-size: 17rpx;
  color: #888888;
  line-height: 24rpx;
}
.list_warp .price{
  margin-top: 26rpx;
}
.list_warp .new_price{
  display: inline-block;
  color: #977958;
  font-size: 36rpx;
  line-height: 41rpx;
}
.list_warp .old_price{
  display: inline-block;
  color: #A8A8A8;
  text-decoration:line-through;
  margin-left: 10rpx;
}
.list_warp .small_txt{
  font-size: 20rpx;
}
.list_warp_header{
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 35rpx;
  padding: 6rpx 0;
}
.list_warp_header image{
  height: 100%;
}
.list_warp_header text{
  font-size: 24rpx;
  line-height: 33rpx;
  color: #191919;
}